<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sdk_demo_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="初始化" />

    <Button
        android:id="@+id/sdk_demo_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />


    <Button
        android:id="@+id/sdk_demo_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销" />

    <Button
        android:id="@+id/sdk_demo_upload_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上报角色信息" />

    <Button
        android:id="@+id/sdk_demo_pay001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付0.01元" />


    <Button
        android:id="@+id/sdk_demo_sdk_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取SDK版本" />


    <Button
        android:id="@+id/sdk_demo_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出游戏" />
</LinearLayout>
